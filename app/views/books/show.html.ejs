<div class="hero-unit">
  <h2 class="title"><%= book.title %></h2>
  <%- linkTo('Edit this book', editBookPath(params.id), {class: 'btn pull-right'}); %>
  <%- linkTo('Back to list', bookPath(''), {class: 'btn pull-right'}); %>
</div>

<h2>Book Properties</h2>
<% for(var i in book) { -%>
<% if(i !== 'saved') { -%>
<div class="row list-item">
  <div class="span4">
    <h3><%= i %></h3>
  </div>
  <div class="span8">
    <h3><i class="icon-list-alt"></i><span class="<%= i %>"><%= book[i] %></span></h3>
  </div>
</div>
<% } -%><% } -%>