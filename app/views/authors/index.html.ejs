<div class="hero-unit">
  <h2>All Authors</h2>
  <%- linkTo('Create a new Author', addAuthorPath, {class: 'btn pull-right'}); %>
</div>

<div id="authors-list">
<% if (authors) { %>
<% for (var i = 0, ii = authors.length; i < ii; i++) { %>
  <div class="row list-item" id="author-<%= authors[i].id; %>">
    <div class="span8">
      <h3><%- linkTo(authors[i].name, authorPath(authors[i].id)); %></h3>
    </div>
    <div class="span4">
      <h3><i class="icon-list-alt"></i><%= authors[i].id; %></h3>
    </div>
  </div>
<% } %>
<% } %>
</div>