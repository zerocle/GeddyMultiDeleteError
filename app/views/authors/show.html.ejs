<div class="hero-unit">
  <h2 class="name"><%= author.name %></h2>
  <%- linkTo('Edit this author', editAuthorPath(params.id), {class: 'btn pull-right'}); %>
  <%- linkTo('Back to list', authorPath(''), {class: 'btn pull-right'}); %>
</div>

<h2>Author Properties</h2>
<% for(var i in author) { -%>
<% if(i !== 'saved') { -%>
<div class="row list-item">
  <div class="span4">
    <h3><%= i %></h3>
  </div>
  <div class="span8">
    <h3><i class="icon-list-alt"></i><span class="<%= i %>"><%= author[i] %></span></h3>
  </div>
</div>
<% } -%><% } -%>